##
## General
##

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
indent_size = 4
max_line_length = 88

[*.{js,jsx,json,yml}]
indent_size = 2

[Caddyfile]
indent_style = tab

# These files are auto-generated
[frontend/src/translations/*.json]
insert_final_newline = false
